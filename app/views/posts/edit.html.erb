<h1 class="display-4 text-primary">Postされたデータを編集する</h1>
<p><%= @msg %></p>
<%= form_for(@remake, url:{controller:'remakes',action:'update',id:@remake.id}) do |form| %>
  <div class="form-group">
    <label for="x">x</label>
    <%= form.text_field :x, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="y">y</label>
    <%= form.text_field :y, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="z">z</label>
    <%= form.text_field :z, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="text">text</label>
    <%= form.text_field :text, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="filename">filename</label>
    <%= form.text_field :filename, class:"form-control" %>
  </div>
  <%= form.submit class:"btn btn-primary" %>
<% end %>
