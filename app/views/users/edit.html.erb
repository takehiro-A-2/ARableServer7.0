<h1 class="display-4 text-primary">User Home</h1>
<h2 class="h4">※<%= %> さんの設定</h2>

<p><%= @user.account_name  %></p>


<%= form_for(@user, url:{controller:'users', 
    action:'update'}) do |form| %>
  <div class="form-group">
    <label for="nickame">ユーザー名</label>
    <%= form.text_field :account_name, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="memo">自己紹介</label>
    <%= form.text_field :memo, class:"form-control" %>
  </div>

  <div class="form-group">
    <label for="birthday">誕生日</label></p>
    <%= form.date_select :birthday, start_year:1940,end_year:Time.current.year,use_month_numbers:true %>
  </div>

  <div class="form-group">
    <label for="town">現在地</label>
    <%= form.text_field :town, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="icon1">メインアイコン</label>
    <%= form.file_field :icon1, class:"form-control" %>
  </div>
  <div class="form-group">
    <label for="icon2">バックアイコン</label>
    <%= form.file_field :icon2, class:"form-control" %>
  </div>

  <div class="form-group">
    <label for="activation">鍵アカ</label>
    <%= form.text_field :activation , placeholder: '鍵垢にするならtrueを入力。', class:"form-control" %>
  </div>
 
  <div>
  <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>


